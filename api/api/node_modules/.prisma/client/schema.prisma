generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  cargo String

  tarefas Tarefa[] //relacionamento um user pode ter muitas tarefas vinculadas a ele

  @@map("users")
}

model Projeto {
  id              Int      @id @default(autoincrement())
  nome            String
  descricao       String
  dataInicio      DateTime
  dataFimPrevista DateTime
  statusId        Int
  status          Status   @relation(fields: [statusId], references: [id]) // Faz o relacionamento da tabela projeto com a tabela status

  //relacionamento um projeto pode ter muitas tarefas
  tarefas Tarefa[]

  @@map("projetos")
}

//model para o status das tarefas
model StatusTarefa {
  id      Int      @id @default(autoincrement())
  nome    String   @unique
  tarefas Tarefa[] // Relacionamento com Tarefa

  @@map("status_tarefa")
}

model Tarefa {
  id        Int       @id @default(autoincrement())
  titulo    String
  descricao String? // A descrição é opcional
  prazo     DateTime? // O prazo é opcional
  concluida Boolean   @default(false)

  //relacionamento com o projeto
  projetoId Int
  projeto   Projeto @relation(fields: [projetoId], references: [id])

  //relacionamento com o usuário
  assigneeId Int? // (int? <- opcional) assigneeId para melhorar a clareza e semantica ao invés de um generico userId
  assignee   User? @relation(fields: [assigneeId], references: [id])

  //relacionamento com o status_tarefa
  statusTarefaId Int // Chave estrangeira
  statusTarefa   StatusTarefa @relation(fields: [statusTarefaId], references: [id])

  @@map("tarefas")
}

//model para os status do projeto
model Status {
  id       Int       @id @default(autoincrement())
  nome     String    @unique
  projetos Projeto[]

  @@map("status")
}
